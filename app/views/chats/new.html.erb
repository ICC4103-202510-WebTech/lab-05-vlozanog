<div class="container mt-4">
  <h1 class="text-center mb-4">New Chat</h1>

  <div class="d-flex justify-content-center">
    <div class="card p-4">
      <%= form_with(model: @chat, local: true) do |f| %>
        <div class="mb-3">
          <%= f.label :sender_id, "Sender", class: "form-label fw-bold" %>
          <%= f.select :sender_id, User.all.collect { |u| ["#{u.first_name} #{u.last_name}", u.id] }, prompt: "Select sender" %>
        </div>

        <div class="mb-3">
          <%= f.label :receiver_id, "Receiver", class: "form-label fw-bold" %>
          <%= f.select :receiver_id, User.all.collect { |u| ["#{u.first_name} #{u.last_name}", u.id] }, prompt: "Select receiver" %>
        </div>

        <div class="text-center">
          <%= f.submit "Create Chat", class: "btn btn-danger" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
