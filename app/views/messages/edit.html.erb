<div class="container mt-4">
  <h1 class="text-center mb-4">Edit Message</h1>

  <div class="d-flex justify-content-center">
    <div class="card p-4">
      <%= form_with(model: @message, local: true) do |f| %>
        <div class="mb-3">
          <%= f.label :chat_id, "Chat", class: "form-label fw-bold" %>
          <%= f.select :chat_id, Chat.all.collect { |c| ["Chat ##{c.id}", c.id] }, { prompt: "Select chat" }, class: "form-select" %>
        </div>
      
        <div class="mb-3">
          <%= f.label :user_id, "Author", class: "form-label fw-bold" %>
          <%= f.select :user_id, User.all.collect { |u| ["#{u.first_name} #{u.last_name}", u.id] }, { prompt: "Select author" }, class: "form-select" %>
        </div>
      
        <div class="mb-3">
          <%= f.label :body, "Message", class: "form-label fw-bold" %>
          <%= f.text_area :body, class: "form-control" %>
        </div>
      
        <div class="text-center">
          <%= f.submit "Update Message", class: "btn btn-primary" %>
        </div>
      <% end %>
      <div class="text-center mt-3">
        <%= link_to 'Back to Messages', messages_path, class: "btn btn-secondary" %>
      </div>
    </div>
  </div>
  <div class="d-flex justify-content-center">
    <% if @message.errors.any? %>
      <div class="alert alert-danger">
        <ul>
          <% @message.errors.full_messages.each do |m| %>
            <li><%= m %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  </div>
</div>
