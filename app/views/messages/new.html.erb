<h1>New Message</h1>

<%= form_with(model: @message, local: true) do |f| %>
    <div>
      <%= f.label :chat_id, "Chat" %>
      <%= f.select :chat_id, Chat.all.collect { |c| ["Chat ##{c.id}", c.id] }, prompt: "Select chat" %>
    </div>
  
    <div>
      <%= f.label :user_id, "Author" %>
      <%= f.select :user_id, User.all.collect { |u| [u.first_name + " " + u.last_name, u.id] }, prompt: "Select author" %>
    </div>
  
    <div>
      <%= f.label :body, "Message" %>
      <%= f.text_area :body %>
    </div>
  
    <div>
      <%= f.submit "Send Message" %>
    </div>
  <% end %>