<div class="container mt-4">
  <h1 class="text-center mb-4">New Message</h1>

  <div class="d-flex justify-content-center">
    <div class="card p-4">
      <%= form_with(model: @message, local: true) do |f| %>
        <div class="mb-3">
          <%= f.label :chat_id, "Chat", class: "form-label fw-bold" %>
          <%= f.select :chat_id, Chat.all.collect { |c| ["Chat ##{c.id}", c.id] }, prompt: "Select chat" %>
        </div>
      
        <div class="mb-3">
          <%= f.label :user_id, "Author", class: "form-label fw-bold" %>
          <%= f.select :user_id, User.all.collect { |u| ["#{u.first_name} #{u.last_name}", u.id] }, prompt: "Select author" %>
        </div>
      
        <div class="mb-3">
          <%= f.label :body, "Message", class: "form-label fw-bold" %>
          <%= f.text_area :body, class: "form-control" %>
        </div>
      
        <div class="text-center">
          <%= f.submit "Send Message", class: "btn btn-danger" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
