<h1 class="text-center">Message Details</h1>

<div class="container">
    <div class="table-responsive">
        <table class="table table-bordered">
            <tr>
                <th>ID</th>
                <th>Chat ID</th>
                <th>User ID</th>
                <th>Body</th>
                <th>Created At</th>
                <th>Updated At</th>
            </tr>
            <tr>
                <td><%= @message.id %></td>
                <td><%= @message.chat_id %></td>
                <td><%= @message.user_id %></td>
                <td><%= @message.body %></td>
                <td><%= @message.created_at %></td>
                <td><%= @message.updated_at %></td>
        </table>
    </div>
</div>

<h3 class="text-center"><%= link_to("All Messages", messages_path) %></h3>
