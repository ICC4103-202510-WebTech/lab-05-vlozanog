<h1 class="text-center">Users</h1>
<div class="container">
    <div class="table-responsive">
        <table class="table table-bordered">
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
                <th>Messages Sent</th>
                <th>Details</th>
                <% if user_signed_in? %>
                    <th>Edit</th>
                <% end %>
            </tr>
            <% @users.each do |user|%>
                <tr>
                    <td><%= user.first_name %></td>
                    <td><%= user.last_name %></td>
                    <td><%= user.email %></td>
                    <td><%= user.messages.count %></td>
                    <td><%= link_to("Details", user_path(user)) %></td>
                    <% if user_signed_in? %>
                        <td>
                            <% if current_user == user %>
                                <%= link_to 'Edit', edit_user_path(user), class: 'btn btn-sm btn-primary' %>
                            <% end %>
                        </td>
                    <% end %>
                </tr>
            <% end %>
        </table>
    </div>
</div>