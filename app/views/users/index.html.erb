<h1 class="text-center">Users</h1>
<div class="container">
    <div class="table-responsive">
        <table class="table table-bordered">
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
                <th>Details</th>
            </tr>
            <% @users.each do |user|%>
                <tr>
                    <td><%= user.first_name %></td>
                    <td><%= user.last_name %></td>
                    <td><%= user.email %></td>
                    <td><%= link_to("Details", user_path(user)) %></td>
                </tr>
            <% end %>
        </table>
    </div>
</div>