<h1 class="text-center">User Details</h1>

<div class="container">
  <div class="table-responsive">
    <table class="table table-bordered">
      <tr>
        <th>ID</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email</th>
        <th>Created At</th>
        <th>Updated At</th>
      </tr>
      <tr>
        <td><%= @user.id %></td>
        <td><%= @user.first_name %></td>
        <td><%= @user.last_name %></td>
        <td><%= @user.email %></td>
        <td><%= @user.created_at %></td>
        <td><%= @user.updated_at %></td>
      </tr>
    </table>
  </div>
</div>

<div class="container mt-5">
  <h3 class="mb-3">Chats</h3>
  <ul class="list-group">
    <% @user_chats.each do |chat| %>
      <li class="list-group-item d-flex justify-content-between">
        <strong>Chat #<%= chat.id %></strong>
        <%= link_to "View Chat", chat_path(chat), class: "btn btn-sm btn-outline-primary" %>
      </li>
    <% end %>
    <% if @user_chats.empty? %>
      <li class="list-group-item">No chats found.</li>
    <% end %>
  </ul>
</div>

<div class="container mt-5">
  <h3 class="mb-3">Messages Sent</h3>
  <ul class="list-group">
    <% @messages.each do |message| %>
      <li class="list-group-item d-flex justify-content-between">
        <strong>Message #<%= message.id %></strong>
        <%= link_to "View Message", message_path(message), class: "btn btn-sm btn-outline-primary" %>
      </li>
    <% end %>
    <% if @messages.empty? %>
      <li class="list-group-item">No messages found.</li>
    <% end %>
  </ul>
</div>

<div class="text-center mt-4">
  <%= link_to 'Edit User', edit_user_path(@user), class: 'btn btn-primary' %>
  <%= link_to "All Users", users_path, class: "btn btn-secondary" %>
</div>