<h1 class="text-center">User Details</h1>

<div class="container">
    <div class="table-responsive">
        <table class="table table-bordered">
            <tr>
                <th>ID</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
                <th>Created At</th>
                <th>Updated At</th>
            </tr>
            <tr>
                <td><%= @user.id %></td>
                <td><%= @user.first_name %></td>
                <td><%= @user.last_name %></td>
                <td><%= @user.email %></td>
                <td><%= @user.created_at %></td>
                <td><%= @user.updated_at %></td>
        </table>
    </div>
</div>

<h3 class="text-center"><%= link_to("All Users", users_path) %></h3>